<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ChatRoomActivity">

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="663dp"
         />

    <Button
        android:id="@+id/BtnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatListView"
        android:layout_alignParentRight="true"
        android:text="@string/sendButton"
        android:onClick="sendChatMessage"/>


    <Button
        android:id="@+id/BtnReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatListView"
        android:layout_alignParentLeft="true"
        android:text="@string/receiveButton"
        android:onClick="receiveChatMessage"/>


    <EditText
        android:id="@+id/chatText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatListView"
        android:layout_toStartOf="@+id/BtnSend"
        android:layout_toRightOf="@id/BtnReceive"
        android:hint="@string/typeHereHint"
        android:textColor="#020202">

    </EditText>


</RelativeLayout>