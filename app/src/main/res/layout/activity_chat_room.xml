<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ChatRoomActivity">

    <ListView
        android:id="@+id/listViewMsg"
        android:layout_width="match_parent"
        android:layout_height="663dp"
         />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewMsg"
        android:layout_alignParentRight="true"
        android:text="@string/sendButton"></Button>


    <Button
        android:id="@+id/buttonReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewMsg"
        android:layout_alignParentLeft="true"
        android:text="@string/receiveButton">

    </Button>

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewMsg"
        android:layout_toStartOf="@+id/buttonSend"
        android:layout_toRightOf="@id/buttonReceive"
        android:hint="@string/typeHereHint"
        android:textColor="#020202">

    </EditText>


</RelativeLayout>